@model IEnumerable<InvestGroup.Models.GalleryCategory>

@{
    ViewData["Title"] = "Manage Galleries";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2">Image Galleries</h1>
</div>

<p class="text-muted mb-4">Select a category below to manage its images. Each category corresponds to a specific gallery on the public website.</p>

<div class="row g-4">
    @foreach (var item in Model)
    {
        <div class="col-md-6">
            <a asp-action="Manage" asp-route-id="@item.Id" class="gallery-card-link">
                <div class="card gallery-card h-100">
                    <div class="card-body d-flex align-items-center">
                        <div class="gallery-card-icon me-4">
                            @if (item.NameEn.Contains("Furniture"))
                            {
                                <i class="fas fa-couch"></i>
                            }
                            else
                            {
                                <i class="fas fa-paint-roller"></i>
                            }
                        </div>
                        <div>
                            <h5 class="card-title mb-1">@item.NameEn</h5>
                            <h6 class="card-subtitle mb-2 text-muted" dir="rtl">@item.NameAr</h6>
                            <p class="card-text small text-muted">@item.DescriptionEn</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    }
</div>

<style>
    .gallery-card-link {
        text-decoration: none;
        color: inherit;
        display: block;
    }

    .gallery-card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        border: 1px solid #e0e0e0;
        border-radius: .75rem;
    }

    .gallery-card-link:hover .gallery-card {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
    }

    .gallery-card-icon {
        font-size: 2.5rem;
        color: var(--primary-accent);
        background-color: rgba(37, 156, 154, 0.1);
        width: 70px;
        height: 70px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        flex-shrink: 0;
    }
</style>
