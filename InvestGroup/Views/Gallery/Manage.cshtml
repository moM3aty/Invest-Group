@model InvestGroup.Models.GalleryCategory

@{
    ViewData["Title"] = "Manage " + Model.NameEn;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2">Manage: @Model.NameEn / <span dir="rtl">@Model.NameAr</span></h1>
    <a asp-action="Index" class="btn btn-secondary">Back to Galleries List</a>
</div>

<!-- Form to add new images -->
<div class="card shadow-sm mb-5">
    <div class="card-header bg-light">
        <h4 class="mb-0"><i class="fas fa-plus-circle me-2 text-primary"></i>Add New Images</h4>
    </div>
    <div class="card-body p-4">
        <form asp-action="AddImages" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" name="categoryId" value="@Model.Id" />
            <div class="mb-3">
                <label for="newImagesInput" class="form-label fw-bold">Select images to upload (multiple selection is allowed)</label>
                <input type="file" name="newImages" id="newImagesInput" class="form-control" multiple required />
            </div>

            <!-- Image Preview Area -->
            <div id="imagePreviewContainer" class="mb-3" style="display: none;">
                <label class="form-label fw-bold">Image Previews</label>
                <div id="imagePreview" class="d-flex flex-wrap gap-2 border p-2 rounded" style="min-height: 110px;">
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fas fa-upload me-2"></i>Upload Images</button>
            </div>
        </form>
    </div>
</div>

<!-- Display existing images -->
<div class="card shadow-sm">
    <div class="card-header bg-light">
        <h4 class="mb-0"><i class="fas fa-images me-2 text-primary"></i>Existing Images (@Model.Images.Count)</h4>
    </div>
    <div class="card-body p-4">
        @if (Model.Images.Any())
        {
            <div class="row g-3">
                @foreach (var image in Model.Images.OrderByDescending(i => i.Id))
                {
                    <div class="col-6 col-md-4 col-lg-3" id="gallery-image-@image.Id">
                        <div class="gallery-item-admin">
                            <img src="@image.ImageUrl" class="img-fluid rounded" alt="Gallery Image">
                            <div class="gallery-item-admin-overlay">
                                <button type="button" class="btn btn-danger btn-sm" onclick="confirmDelete(@image.Id)">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-center text-muted p-4">There are no images in this gallery yet. Use the form above to add some.</p>
        }
    </div>
</div>


<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this image? This action cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>
</div>


<style>
    .gallery-item-admin {
        position: relative;
        overflow: hidden;
        border-radius: 0.375rem; /* Bootstrap's default rounded */
        box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,.075);
    }

        .gallery-item-admin img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .gallery-item-admin:hover img {
            transform: scale(1.1);
        }

    .gallery-item-admin-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

        .gallery-item-admin-overlay .btn {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

    .gallery-item-admin:hover .gallery-item-admin-overlay {
        opacity: 1;
    }
</style>

@section Scripts {
    <script>
        let imageIdToDelete = null;
        const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));

        function confirmDelete(imageId) {
            imageIdToDelete = imageId;
            deleteModal.show();
        }

        document.getElementById('confirmDeleteBtn').addEventListener('click', function() {
            if (imageIdToDelete) {
                $.ajax({
                    url: '/Gallery/DeleteImage/' + imageIdToDelete,
                    type: 'POST',
                    headers: {
                       "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(result) {
                        if (result.success) {
                            $('#gallery-image-' + imageIdToDelete).fadeOut(500, function() { $(this).remove(); });
                        } else {
                            alert('Error deleting image.');
                        }
                    },
                    error: function() {
                         alert('An error occurred while trying to delete the image.');
                    },
                    complete: function() {
                        imageIdToDelete = null;
                        deleteModal.hide();
                    }
                });
            }
        });

        // Image preview script
        $("#newImagesInput").change(function() {
            const previewContainer = $('#imagePreview');
            const previewContainerWrapper = $('#imagePreviewContainer');
            previewContainer.empty();

            if (this.files && this.files.length > 0) {
                previewContainerWrapper.show();
                $.each(this.files, function(i, file) {
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        var img = $('<img/>').attr('src', e.target.result).css({
                            'width': '100px',
                            'height': '100px',
                            'object-fit': 'cover',
                            'border-radius': '5px'
                        });
                        previewContainer.append(img);
                    }
                    reader.readAsDataURL(file);
                });
            } else {
                 previewContainerWrapper.hide();
            }
        });
    </script>
}
