@model InvestGroup.Models.Property

@{
    ViewData["Title"] = "Edit Property";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="Edit" enctype="multipart/form-data">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">Edit: @Model.TitleEn</h1>
        <div>
            <a asp-action="Properties" class="btn btn-secondary">Back to List</a>
            <input type="submit" value="Save Changes" class="btn btn-primary" />
        </div>
    </div>

    <input type="hidden" asp-for="Id" />
    <div class="card shadow-sm">
        <div class="card-body p-4">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <ul class="nav nav-tabs nav-pills nav-fill mb-4" id="myTab" role="tablist">
                <li class="nav-item" role="presentation"><button class="nav-link active" id="basic-tab" data-bs-toggle="tab" data-bs-target="#basic" type="button" role="tab">Basic Info</button></li>
                <li class="nav-item" role="presentation"><button class="nav-link" id="details-tab" data-bs-toggle="tab" data-bs-target="#details" type="button" role="tab">Details & Features</button></li>
                <li class="nav-item" role="presentation"><button class="nav-link" id="media-tab" data-bs-toggle="tab" data-bs-target="#media" type="button" role="tab">Media & Data</button></li>
            </ul>

            <div class="tab-content" id="myTabContent">
                <!-- Basic Info Tab -->
                <div class="tab-pane fade show active" id="basic" role="tabpanel">
                    <div class="row g-3">
                        <div class="col-md-6"><div class="form-floating"><input asp-for="TitleEn" class="form-control" placeholder=" " /><label asp-for="TitleEn"></label></div></div>
                        <div class="col-md-6"><div class="form-floating"><input asp-for="TitleAr" class="form-control" placeholder=" " dir="rtl" /><label asp-for="TitleAr"></label></div></div>
                        <div class="col-md-6"><div class="form-floating"><input asp-for="LocationEn" class="form-control" placeholder=" " /><label asp-for="LocationEn"></label></div></div>
                        <div class="col-md-6"><div class="form-floating"><input asp-for="LocationAr" class="form-control" placeholder=" " dir="rtl" /><label asp-for="LocationAr"></label></div></div>
                        <div class="col-md-6"><div class="form-floating"><textarea asp-for="OverviewEn" class="form-control" placeholder=" " style="height: 120px"></textarea><label asp-for="OverviewEn"></label></div></div>
                        <div class="col-md-6"><div class="form-floating"><textarea asp-for="OverviewAr" class="form-control" placeholder=" " style="height: 120px" dir="rtl"></textarea><label asp-for="OverviewAr"></label></div></div>
                    </div>
                </div>

                <!-- Details Tab -->
                <div class="tab-pane fade" id="details" role="tabpanel">
                    <div class="row g-3">
                        <div class="col-md-6"><div class="form-floating"><textarea asp-for="DescriptionEn" class="form-control" placeholder=" " style="height: 150px"></textarea><label asp-for="DescriptionEn"></label></div></div>
                        <div class="col-md-6"><div class="form-floating"><textarea asp-for="DescriptionAr" class="form-control" placeholder=" " style="height: 150px" dir="rtl"></textarea><label asp-for="DescriptionAr"></label></div></div>
                        <div class="col-md-6"><div class="form-floating"><textarea asp-for="FeaturesEn" class="form-control" placeholder=" " style="height: 120px"></textarea><label asp-for="FeaturesEn"></label></div></div>
                        <div class="col-md-6"><div class="form-floating"><textarea asp-for="FeaturesAr" class="form-control" placeholder=" " style="height: 120px" dir="rtl"></textarea><label asp-for="FeaturesAr"></label></div></div>
                        <div class="col-md-6"><div class="form-floating"><textarea asp-for="UnitTypesEn" class="form-control" placeholder=" " style="height: 100px"></textarea><label asp-for="UnitTypesEn"></label></div></div>
                        <div class="col-md-6"><div class="form-floating"><textarea asp-for="UnitTypesAr" class="form-control" placeholder=" " style="height: 100px" dir="rtl"></textarea><label asp-for="UnitTypesAr"></label></div></div>
                        <div class="col-md-6"><div class="form-floating"><textarea asp-for="PaymentPlanEn" class="form-control" placeholder=" " style="height: 100px"></textarea><label asp-for="PaymentPlanEn"></label></div></div>
                        <div class="col-md-6"><div class="form-floating"><textarea asp-for="PaymentPlanAr" class="form-control" placeholder=" " style="height: 100px" dir="rtl"></textarea><label asp-for="PaymentPlanAr"></label></div></div>
                    </div>
                </div>

                <!-- Media & Data Tab -->
                <div class="tab-pane fade" id="media" role="tabpanel">
                    <div class="row g-3">
                        <div class="col-md-6"><div class="form-floating"><input asp-for="ProjectAreaEn" class="form-control" placeholder=" " /><label asp-for="ProjectAreaEn"></label></div></div>
                        <div class="col-md-6"><div class="form-floating"><input asp-for="ProjectAreaAr" class="form-control" placeholder=" " dir="rtl" /><label asp-for="ProjectAreaAr"></label></div></div>
                        <div class="col-md-6"><div class="form-floating"><input asp-for="DeliveryInfoEn" class="form-control" placeholder=" " /><label asp-for="DeliveryInfoEn"></label></div></div>
                        <div class="col-md-6"><div class="form-floating"><input asp-for="DeliveryInfoAr" class="form-control" placeholder=" " dir="rtl" /><label asp-for="DeliveryInfoAr"></label></div></div>
                        <div class="col-md-6"><div class="form-floating"><input asp-for="MaintenanceInfoEn" class="form-control" placeholder=" " /><label asp-for="MaintenanceInfoEn"></label></div></div>
                        <div class="col-md-6"><div class="form-floating"><input asp-for="MaintenanceInfoAr" class="form-control" placeholder=" " dir="rtl" /><label asp-for="MaintenanceInfoAr"></label></div></div>
                        <div class="col-md-6"><div class="form-floating"><input asp-for="SpecialOfferEn" class="form-control" placeholder=" " /><label asp-for="SpecialOfferEn"></label></div></div>
                        <div class="col-md-6"><div class="form-floating"><input asp-for="SpecialOfferAr" class="form-control" placeholder=" " dir="rtl" /><label asp-for="SpecialOfferAr"></label></div></div>
                        <div class="col-md-6"><div class="form-floating"><select asp-for="Category" class="form-select"><option value="0">Apartment</option><option value="1">Finishing</option></select><label asp-for="Category"></label></div></div>
                        <div class="col-md-6"><div class="form-floating"><input asp-for="Price" class="form-control" placeholder=" " /><label asp-for="Price"></label></div></div>

                        <div class="col-12">
                            <div class="card mt-3">
                                <div class="card-body">
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <label class="form-label fw-bold">Main Image</label>
                                            <img src="@Model.MainImageUrl" id="mainImagePreview" width="150" class="d-block rounded mb-2 shadow-sm" />
                                            <label class="form-label">Change Main Image (Optional)</label>
                                            <input type="file" name="mainImageFile" id="mainImageInput" class="form-control" />
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label fw-bold">Gallery Images</label>
                                            <div class="d-flex flex-wrap gap-2 border p-2 rounded mb-2" style="min-height: 100px;">
                                                @foreach (var image in Model.GalleryImages)
                                                {
                                                    <div class="position-relative" id="gallery-image-@image.Id">
                                                        <img src="@image.ImageUrl" style="width: 100px; height: 100px; object-fit: cover;" class="rounded" />
                                                        <button type="button" class="btn btn-danger btn-sm position-absolute top-0 end-0" style="line-height:1; padding: 2px 5px;" onclick="deleteImage(@image.Id)">×</button>
                                                    </div>
                                                }
                                            </div>
                                            <label class="form-label">Add New Gallery Images</label>
                                            <input type="file" name="galleryFiles" id="galleryFilesInput" class="form-control" multiple />
                                            <div id="galleryPreview" class="d-flex flex-wrap gap-2 mt-2 border p-2 rounded" style="min-height: 50px;"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $("#mainImageInput").change(function() {
            if (this.files && this.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) { $('#mainImagePreview').attr('src', e.target.result); }
                reader.readAsDataURL(this.files[0]);
            }
        });

        $("#galleryFilesInput").change(function() {
            $('#galleryPreview').empty();
            if (this.files) {
                $.each(this.files, function(i, file) {
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        var img = $('<img/>').attr('src', e.target.result).css({ 'width': '100px', 'height': '100px', 'object-fit': 'cover', 'border-radius': '5px' });
                        $('#galleryPreview').append(img);
                    }
                    reader.readAsDataURL(file);
                });
            }
        });

        function deleteImage(imageId) {
            if (confirm('Are you sure you want to delete this image?')) {
                $.ajax({
                    url: '/Admin/DeleteGalleryImage/' + imageId,
                    type: 'POST',
                    headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
                    success: function(result) {
                        if (result.success) {
                            $('#gallery-image-' + imageId).remove();
                        } else {
                            alert('Error deleting image.');
                        }
                    }
                });
            }
        }
    </script>
}
