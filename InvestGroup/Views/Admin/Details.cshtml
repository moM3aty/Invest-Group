@model InvestGroup.Models.Property

@{
    ViewData["Title"] = "Property Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2">Details: @Model.TitleEn</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary"><i class="fas fa-edit me-2"></i>Edit</a>
        <a asp-action="Properties" class="btn btn-secondary">Back to List</a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body p-4">
        <div class="row">
            <div class="col-lg-4">
                <h5 class="fw-bold">Main Image</h5>
                <img src="@Model.MainImageUrl" class="img-fluid rounded shadow-sm mb-4" alt="Main Image">

                <h5 class="fw-bold">Gallery Images</h5>
                @if (Model.GalleryImages.Any())
                {
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var image in Model.GalleryImages)
                        {
                            <img src="@image.ImageUrl" style="width: 100px; height: 100px; object-fit: cover;" class="rounded shadow-sm" alt="Gallery Image" />
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">No gallery images available.</p>
                }
            </div>
            <div class="col-lg-8">
                <dl class="row">
                    <dt class="col-sm-3">Category</dt>
                    <dd class="col-sm-9">
                        @if (Model.Category == 0)
                        {
                            <span class="badge bg-success">Apartment</span>
                        }
                        else
                        {
                            <span class="badge bg-info">Finishing</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Title (EN)</dt>
                    <dd class="col-sm-9">@Model.TitleEn</dd>

                    <dt class="col-sm-3">Title (AR)</dt>
                    <dd class="col-sm-9" dir="rtl">@Model.TitleAr</dd>

                    <dt class="col-sm-3">Location (EN)</dt>
                    <dd class="col-sm-9">@Model.LocationEn</dd>

                    <dt class="col-sm-3">Location (AR)</dt>
                    <dd class="col-sm-9" dir="rtl">@Model.LocationAr</dd>

                    <dt class="col-sm-3">Price</dt>
                    <dd class="col-sm-9">@Model.Price</dd>

                    <hr class="my-3" />

                    <dt class="col-sm-3">Overview (EN)</dt>
                    <dd class="col-sm-9">@Html.Raw(Model.OverviewEn?.Replace("\n", "<br />"))</dd>

                    <dt class="col-sm-3">Overview (AR)</dt>
                    <dd class="col-sm-9" dir="rtl">@Html.Raw(Model.OverviewAr?.Replace("\n", "<br />"))</dd>

                    <hr class="my-3" />

                    <dt class="col-sm-3">Description (EN)</dt>
                    <dd class="col-sm-9">@Html.Raw(Model.DescriptionEn?.Replace("\n", "<br />"))</dd>

                    <dt class="col-sm-3">Description (AR)</dt>
                    <dd class="col-sm-9" dir="rtl">@Html.Raw(Model.DescriptionAr?.Replace("\n", "<br />"))</dd>

                </dl>
            </div>
        </div>
    </div>
</div>
