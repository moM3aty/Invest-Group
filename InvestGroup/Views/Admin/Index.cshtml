@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
   
    var recentProperties = ViewData["RecentProperties"] as List<InvestGroup.Models.Property>;
}

<!-- Stat Cards -->
<div class="row g-4">
    <div class="col-lg-4 col-md-6">
        <div class="card stat-card h-100">
            <div class="card-body d-flex align-items-center">
                <div class="stat-card-icon bg-primary text-white me-4">
                    <i class="fas fa-building fa-2x"></i>
                </div>
                <div>
                    <h6 class="text-muted mb-1">Total Properties</h6>
                    <h2 class="fw-bold mb-0">@ViewData["TotalProperties"]</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-6">
        <div class="card stat-card h-100">
            <div class="card-body d-flex align-items-center">
                <div class="stat-card-icon bg-success text-white me-4">
                    <i class="fas fa-city fa-2x"></i>
                </div>
                <div>
                    <h6 class="text-muted mb-1">Apartments</h6>
                    <h2 class="fw-bold mb-0">@ViewData["TotalApartments"]</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-6">
        <div class="card stat-card h-100">
            <div class="card-body d-flex align-items-center">
                <div class="stat-card-icon bg-warning text-white me-4">
                    <i class="fas fa-images fa-2x"></i>
                </div>
                <div>
                    <h6 class="text-muted mb-1">Gallery Images</h6>
                    <h2 class="fw-bold mb-0">@ViewData["TotalGalleryImages"]</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4 mt-2">
    <!-- Quick Actions -->
    <div class="col-lg-4">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-light">
                <h4 class="mb-0"><i class="fas fa-bolt me-2 text-primary"></i>Quick Actions</h4>
            </div>
            <div class="card-body p-4">
                <div class="d-grid gap-2">
                    <a asp-controller="Admin" asp-action="Create" class="btn btn-primary btn-lg"><i class="fas fa-plus me-2"></i>Add New Property</a>
                    <a asp-controller="Gallery" asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-images me-2"></i>Manage Galleries</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Properties -->
    <div class="col-lg-8">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-light">
                <h4 class="mb-0"><i class="fas fa-history me-2 text-primary"></i>Recent Properties</h4>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th style="width: 100px;">Image</th>
                                <th>Title</th>
                                <th>Category</th>
                                <th style="width: 150px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (recentProperties != null && recentProperties.Any())
                            {
                                foreach (var item in recentProperties)
                                {
                                    <tr>
                                        <td class="p-3"><img src="@item.MainImageUrl" class="rounded" style="width: 80px; height: 60px; object-fit: cover;" /></td>
                                        <td class="align-middle">@item.TitleEn</td>
                                        <td class="align-middle">
                                            @if (item.Category == 0)
                                            {
                                                <span class="badge bg-success">Apartment</span>
                                            }
                                            else
                                            {

                                                <span class="badge bg-info">Finishing</span>
                                            }
                                        </td>
                                        <td class="align-middle">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Details</a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="4" class="text-center p-4 text-muted">No recent properties to display. Add one to see it here!</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    .stat-card {
        border: none;
        border-radius: .75rem;
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.05);
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.75rem 1.5rem rgba(0,0,0,0.08);
        }

    .stat-card-icon {
        width: 70px;
        height: 70px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        flex-shrink: 0;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }
</style>
