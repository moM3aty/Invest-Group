@model IEnumerable<InvestGroup.Models.Property>

@{
    ViewData["Title"] = "Properties";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2">Manage Properties</h1>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Add New Property</a>
</div>

<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Title (EN)</th>
                        <th>Title (AR)</th>
                        <th>Category</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><img src="@item.MainImageUrl" width="80" class="rounded" /></td>
                            <td>@item.TitleEn</td>
                            <td>@item.TitleAr</td>
                            <td>
                                @if (item.Category == 0)
                                {
                                    <span class="badge bg-success">Apartment</span>
                                }
                                else
                                {

                                    <span class="badge bg-info">Finishing</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
